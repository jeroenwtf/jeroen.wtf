---
import Layout from '../layouts/Layout.astro';
import Card from '../components/Card.astro';

import linkedinSvg from '../../public/social/linkedin.svg';
import githubSvg from '../../public/social/github.svg';
import twitterSvg from '../../public/social/twitter.svg';
import mastodonSvg from '../../public/social/mastodon.svg';
import instagramSvg from '../../public/social/instagram.svg';

const textGradientClass = 'font-bold text-transparent bg-clip-text bg-gradient-to-br from-orange-300 to-rose-600';

const socialLinks = [
  { text: 'LinkedIn', url: 'https://www.linkedin.com/in/jeroenwtf/', icon: linkedinSvg },
  { text: 'GitHub', url: 'https://github.com/jeroenwtf', icon: githubSvg },
  { text: 'Twitter', url: 'https://twitter.com/jeroen_wtf', icon: twitterSvg },
  { text: 'Mastodon', url: 'https://m.stratonauts.co/@jeroen', icon: mastodonSvg },
  { text: 'Instagram', url: 'https://instagram.com/jeroenwtf', icon: instagramSvg },
]
---
<style>
  .pizza { animation:action 2s infinite ease-in-out }

  @keyframes action {
   0% {
    transform:translateY(0)
   }
   50% {
    transform:translateY(-12px)
   }
  }
</style>

<Layout title="Jeroen van Meerendonk - UX Engineer">
  <div class="container px-6 md:px-10 lg:px-16 py-10 md:py-12 lg:py-16 min-h-screen flex flex-col justify-center">
    <img src="https://beta.jeroen.wtf/pizza.png" class="w-20 pizza mb-4" alt="A glourious flying pizza slice" title="Pizza yay">
    <p class="text-3xl sm:text-4xl lg:text-5xl lg:leading-[1.15] mb-10">Hello there! <br class="hidden lg:inline-block">My name is <strong class={textGradientClass}>Jeroen</strong> and <br class="hidden md:inline-block">I'm a <strong class={textGradientClass}>UX Engineer</strong>.</p>

    <p class="mb-5">And I was bored of my old website. I'm working on a new one. Meanwhile...</p>
    <ul class="flex gap-3 flex-wrap">
      {socialLinks.map(link => (
        <li>
          <a
            href={link.url}
            class="bg-gradient-to-br from-gray-200 text-gray-700 to-gray-100 flex items-center gap-2 text-sm block px-3 py-2 rounded"
            target="_blank"
            rel="noopener noreferrer"
            aria-label={`Visit my ${link.text} account`}
          >
            <img class="w-4" src={link.icon} />
            <span>{link.text}</span>
          </a>
        </li>
      ))}
    </ul>
