---
import clsx from "clsx";

const currentPath = Astro.url.pathname;
const { hideSecondary } = Astro.props;

const sections = [
  { label: "now", url: "/now" },
  { label: "notes", url: "/notes" },
  { label: "uses", url: "/uses", secondary: true },
  { label: "contact", url: "/contact" },
];

const linkClasses =
  "before:content-['/'] before:text-gray-600 before:mr-0 before:text-base text-[0] whitespace-nowrap";
const activeLinkClasses =
  "text-black dark:text-white border-b-2 border-orange-300 font-semibold dark:border-green-400";
---

<ul class="flex flex-wrap gap-x-4 gap-y-2 sm:gap-x-6">
  {
    sections.map((section) => {
      if (hideSecondary && section.secondary) return;

      return (
        <li>
          <a href={section.url} class={linkClasses}>
            <span
              class={clsx(
                "text-base text-gray-500 dark:text-gray-400",
                currentPath === section.url && activeLinkClasses,
              )}
            >
              {section.label}
            </span>
          </a>
        </li>
      );
    })
  }
</ul>
